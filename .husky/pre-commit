#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for staged files (format and lint)
npx lint-staged

# Run tests (full suite to ensure no regressions)
echo "🧪 Running test suite..."
npm run test:run

# Note: Type checking disabled for now due to existing TS errors
# echo "🔍 Type checking..."
# npm run typecheck

echo "✅ Pre-commit checks passed!"
echo "ℹ️  Note: Type checking is disabled until existing TS errors are resolved"